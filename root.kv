<Butt1@Button>:
	color:	1,1,1,1
	font_size: 25
	size_hint: .3, .2
<Butt2@Button>:
	color: 1,1,1,1
	font_size: 25
	size_hint: .15, .08

<CalcFloatLayout>:
	id: calc
	display: inputt

	TextInput:
		id: inputt
		font_size: 32
		multine: False
		size_hint: .9, .1
		pos_hint: {'x':.05, 'top': .9}

	Butt2:
		text: 'AC'
		pos_hint: {'x':.05, 'y':.7}
		on_press: inputt.text = ""
	Butt2:
		text: '<-'
		pos_hint: {'x':.2, 'y': .7}
		on_press: inputt.text = inputt.text[:-1]

	Butt2:
		text: '+'
		pos_hint: {'x': .05, 'y':.02}
		on_press: inputt.text += self.text

	Butt2:
		text: '-'
		pos_hint: {'x': .20, 'y':.02}
		on_press: inputt.text += self.text

	Butt2:
		text: '*'
		pos_hint: {'x': .35, 'y':.02}
		on_press: inputt.text += self.text

	Butt2:
		text: '/'
		pos_hint: {'x': .50, 'y':.02}
		on_press: inputt.text += self.text

	Button:
		text: '0'
		pos_hint: {'x': .65, 'y':.02}
		color: 1,1,1,1
		font_size: 25
		size_hint: .2, .08
		on_press: inputt.text += self.text

	Button:
		text: '='
		pos_hint: {'x': .85, 'y':.02}
		color: 1,1,1,1
		font_size: 25
		size_hint: .10, .08
		on_press: calc.calculate(inputt.text)

	Butt1:
		text: '7'
		pos_hint: {'x': .05, 'y': .5}
		on_press: inputt.text += self.text

	Butt1:
		text: '8'
		pos_hint: {'x': .35, 'y': .5}
		on_press: inputt.text += self.text

	Butt1:
		text: '9'
		pos_hint: {'x': .65, 'y': .5}
		on_press: inputt.text += self.text

	Butt1:
		text: '4'
		pos_hint: {'x': .05, 'y': .3}
		on_press: inputt.text += self.text

	Butt1:
		text: '5'
		pos_hint: {'x': .35, 'y': .3}
		on_press: inputt.text += self.text

	Butt1:
		text: '6'
		pos_hint: {'x': .65, 'y': .3}
		on_press: inputt.text += self.text

	Butt1:
		text: '1'
		pos_hint: {'x': .05, 'y': .1}
		on_press: inputt.text += self.text

	Butt1:
		text: '2'
		pos_hint: {'x': .35, 'y': .1}
		on_press: inputt.text += self.text

	Butt1:
		text: '3'
		pos_hint: {'x': .65, 'y': .1}
		on_press: inputt.text += self.text
